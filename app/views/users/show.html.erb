<section class="user">
  <h1><%= @user.name %></h1>
  <h2><%= mail_to(@user.email) %></h2>
  <%# if current_user == @user %>
  <% if current_user?(@user) %>
    <div class="actions">
      <%= link_to "Edit Account", edit_user_path(@user), class: "button edit" %>
      <%= link_to "Delete Account", @user, method: :delete, data: { confirm: 'Are you sure?' }, class: "button delete" %>
    </div>
  <% end %>
  <% if @registrations.present? %>
    <h3>Registrations</h3>
    <% @registrations.each do | registration | %>
      <div class="image">
        <%= link_to image_tag(registration.event.image_file_name), registration.event %>
      </div>
      <div class="name">
        <%= link_to registration.event.name, registration.event %>
      </div>
      <div class="date">
        <%= time_ago_in_words(registration.created_at) %> ago
      </div>
      <hr/>
    <% end %>
  <% end %>
</section>